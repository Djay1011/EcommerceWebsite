@page
@model WebAppli.Areas.Admin.Pages.InvoiceModel
@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Areas/Admin/Pages/Shared/_AdminLayout.cshtml";
}
@using WebAppli.Models;


<div class="row ">
    <div class="col-12">
        <div class="card" style="min-height: 485px">
            <div class="card-header card-header-text">
                <h4 class="card-title">Invoice</h4>
                <p class="category"> Time: @DateTime.Now</p>
            </div>

            <div class="card-content table-responsive">
                @TempData["msg"]
                <table class="table table-hover">
                    <thead class="text-primary">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Customer Id</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.invoices)
                        {
                            <tr>
                                <td>@invoice.Id</td>
                                <td>@invoice.Name</td>
                                <td>@invoice.Created</td>
                                <td>@(invoice.Status == 1 ? "Processing" : "Done")</td>
                                <td>@invoice.AccountId</td>
                                <td>
                                    <a asp-page="InvoiceDetails" asp-route-id="@invoice.Id" class="text-info">
                                        <i class="fa-solid fa-bars"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>