@page
@model WebAppli.Pages.IndexModel
@using WebAppli.Models;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}


<section class="video">
    <iframe width="100%" height="450" src="https://www.youtube.com/embed/UbpuZCB3x9k?controls=0&showinfo=0&rel=0&autoplay=1&loop=1&playlist=UbpuZCB3x9k&mute=1" title="YouTube video player" frameborder="0" allow="autoplay" allowfullscreen></iframe>
</section>


<section class="collection">
    <h2>Feature Product</h2>
    @foreach (var product in @Model.featuredProducts)
    {
        <div class="all-product">
            <div class="product">
                <a asp-page="ProductDetails" asp-route-id="@product.Id"><img src="~/Product/@product.photo" /></a>
                <div class="descript">
                    <span>@product.Title</span>
                    <h5>@product.Name"</h5>
                    <p>&#163;@product.Price</p>
                </div>
            </div>
        </div>
    }

</section>




<section class=" feature collection">
    <h2>Other Collection</h2>
    @foreach (var product in @Model.OtherProducts)
    {
        <div class="all-product">
            <div class="product">
                <a asp-page="ProductDetails" asp-route-id="@product.Id"><img src="~/Product/@product.photo" /></a>
                <div class="descript">
                    <span>@product.Title</span>
                    <a asp-page="ProductDetails" asp-route-id="@product.Id"><h5>@product.Name</h5></a>
                    <p>&#163;@product.Price</p>
                </div>
            </div>
        </div>
        
    }
</section>
