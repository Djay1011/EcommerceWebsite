@page
@model WebAppli.Pages.InvoiceDetailModel
@{
    ViewData["Title"] = "InvoiceDetails";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
@using WebAppli.Models;


<h1>INVOICE</h1>
<div class="container-fluid invoice-container">
    <header>
        <div class="row align-item-center">
            <div class="col-sm-7">
                <img src="/Ecommercess/img/logo.png" alt="" srcset="">
            </div>
            <div class="col-sm -5 text-right">
                <h4 class="mb-0 text-right">Invoice @Model.Invoice.Id</h4>
            </div>
        </div>
    </header>
    <main>
        <div class="row">
            <div class="col-sm-6"><strong>Date: @Model.Invoice.Created</strong></div>
            <div class="col-sm-6 text-right"><strong>Invoice No: @Model.Invoice.Id</strong></div>
        </div>
        <hr>
        <div class="row">
            <div class="col-sm-6 text-right order-sm-1">
                <strong>Pay To: @Model.Invoice.Id</strong>
                <address>
                    <br>
                    <a href="mailto:"></a>
                </address>

            </div>
            <div class="col-sm-6 order-sm-0">
                <strong>Invoiced To: @Model.Invoice.Name </strong>
                <address>
                    <br>@(Model.Invoice.Status == 1 ? "Pending" : "Done")
                    <a href="mailto: "></a>
                </address>
            </div>
        </div>

        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="card-header">
                            <tr>
                                <td class="col-3"><strong>Image</strong></td>
                                <td class="col-4"><strong>Product</strong></td>
                                <td class="col-1"><strong>Quantity</strong></td>
                                <td class="col-1"><strong>Price</strong></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoiceDetail in Model.Invoice.InvoiceDetails)
                            {
                                <tr>
                                    <td class="col-3"><img src="~/Product/@invoiceDetail.Product.photo" alt=""></td>
                                    <td>@invoiceDetail.Product.Name</td>
                                    <td>@invoiceDetail.Quantity</td>
                                    <td>@invoiceDetail.Price</td>
                                </tr>
                            }

                        </tbody>
                        <tfoot class="card-footer">
                            <tr>
                                <td colspan="4" class="text-right"><strong>SubTotal:</strong></td>
                                <td class="text-right">@Model.SubTotal.ToString("c")</td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-right"><strong>Tax:</strong></td>
                                <td class="text-right">@Model.tax.ToString("c")</td>

                            </tr>
                            <tr>
                                <td colspan="4" class="text-right"><strong>Total:</strong></td>
                                <td class="text-right">@Model.Total.ToString("c")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <footer class="text-center mt-4">
        <p class="text-1"><strong>NOTE:</strong>This is a computer generated receipt</p>
        <div class="btn-group btn-group-sm">
            <a href="javascript:window.print()" class="btn btn-light border">Print</a>
            <a href="javascript:window.print()" class="btn btn-light border">Download</a>
        </div>
    </footer>
</div>








