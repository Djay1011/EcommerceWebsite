@page
@model WebAppli.Pages.ProfileModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<section class="login-detail">
    <form method="post" asp-page="Profile">
        <div class="login">
            <h2>Profile</h2>
            <input class="form-field" type="text" placeholder="Username" asp-for="@Model.account.UserName" readonly="readonly">
            <input type="text" placeholder="FullName" asp-for="@Model.account.FullName">
            <input class="form-field" type="email" placeholder="Email" asp-for="@Model.account.Email">
            <input class="form-field" type="text" placeholder="Address" asp-for="@Model.account.Address">
            <input type="text" placeholder="PhoneNumber" asp-for="@Model.account.Phone">
            <input class="form-field" type="password" placeholder="Password" asp-for="@Model.account.Password">

            <button type="submit" class="btn">Save</button>
            <input type="hidden" asp-for="@Model.account.Id"/>
        </div>
    </form>
</section>
